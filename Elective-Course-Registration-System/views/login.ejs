<!DOCTYPE html>
<html class='no-js' lang='en'>

<head>
  <meta charset='utf-8'>
  <meta content='IE=edge,chrome=1' http-equiv='X-UA-Compatible'>
  <title>登录 - 北航附中选修课报名系统</title>
  <link href="/css/iconfont.css" rel="stylesheet" type="text/css">
</head>
<link rel="stylesheet" href="/css/bootstrap.css">
<style type="text/css">
  html,
  body {
    height: 100%;
  }

  body {
    background: url(/images/xiangrikui.jpg) center right;
    background-size: cover;
  }

  .loginbox {
    background-color: rgba(255, 255, 255, .5);
    padding-top: 20px;
  }

  .loginwrap {
    margin-top: 50px;
  }

  span.alert {
    display: block;
    margin-top: 10px;
  }

</style>

<body class='main page'>
  <div class="container">
    <div class="row loginwrap">
      <h1>北航附中选修课报名系统登录</h1>
      <hr>
      <div class="col-lg-5 loginbox">
        <p>
          学号：
        </p>
        <p>
          <input type="text" class="form-control" id="sidTxt">
          <span class="alert alert-danger" role="alert" style="display:none"></span>
        </p>
        <p>
          密码：
        </p>
        <p>
          <input type="password" id="password" class="form-control">
          <span class="alert alert-danger" role="alert" style="display:none"></span>
        </p>
        <p>
          <input type="button" class="btn btn-success" id="loginBtn" value="登录">
        </p>
      </div>
    </div>
  </div>

  <script type="text/javascript" src="/js/jquery.min.js"></script>
  <script type="text/javascript" src="/js/bootstrap.js"></script>
  <script type="text/javascript">
    // 学号的正则验证
    $('#sidTxt').blur(function () {
      var sid = $(this).val()
      if (!/^[\d]{9}$/.test(sid)) {
        $(this).next('span.alert').show().removeClass('alert-success').addClass('alert-danger').html('学号不合法')
      }
    })

    $('#sidTxt').focus(function () {
      $(this).next('span.alert').hide()
    })

    $('#loginBtn').click(function () {
      var sid = $('#sidTxt').val()
      var password = $('#password').val()
      if (!/^[\d]{9}$/.test(sid)) {
        $(this).next('span.alert').show().removeClass('alert-success').addClass('alert-danger').html('学号不合法')
        return
      }
      $.post('./login', {
        sid: sid,
        password: password
      }, function (data) {
        if(data.code === 0000) {
          window.location = '/'
          return
        }
        alert(data.result)
      })
    })
  </script>
</body>

</html>
